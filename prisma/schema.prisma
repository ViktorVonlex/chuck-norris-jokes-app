generator client {
  provider = "prisma-client-js"
}
//env("DATABASE_URL")
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Joke {
  id Int @id @default(autoincrement())
  url String @unique
  value String
  savedBy UsersJokes[]
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  savedJokes UsersJokes[]
}

model UsersJokes{
  joke Joke @relation(fields: [jokeId], references: [id])
  jokeId Int
  user User @relation(fields: [userId], references: [id])
  userId Int
  assignedAt DateTime @default(now())
  assignedBy String 
  
  @@id([jokeId, userId])
}
