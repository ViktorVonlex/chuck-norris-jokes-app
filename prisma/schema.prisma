generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Joke {
  id      Int          @id @default(autoincrement())
  url     String       @unique
  value   String
  savedBy UsersJokes[]
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String
  savedJokes UsersJokes[]
}

model UsersJokes {
  jokeId     Int
  userId     Int
  assignedAt DateTime @default(now())
  assignedBy String
  joke       Joke     @relation(fields: [jokeId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@id([jokeId, userId])
}
